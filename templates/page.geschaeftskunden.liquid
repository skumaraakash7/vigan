<div class="container-indent">
    <div class="container container-fluid-custom-mobile-padding geschaeftskunden">
        {{ page.content }}
        {%- form 'contact' -%}
            <div class="form-group">
                <input type="text" name="contact[name]" value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" class="form-control" id="inputName" placeholder="Vorname & Name*">
            </div>
            <div class="form-group">
                <input type="email" name="contact[email]" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" class="form-control" id="inputEmail" placeholder="E-Mail-Adresse*">
            </div>
            <div class="form-group">
                <input type="text" name="contact[company]" class="form-control" id="inputCompany" placeholder="Firmenname">
            </div>
            <div class="form-group">
                <input type="tel" name="contact[phone]" pattern="[0-9\-]*" value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}" class="form-control" id="inputSubject" placeholder="Telefonnummer">
            </div>
            <div class="form-group">
                <input type="text" name="contact[website]" class="form-control" id="inputWebsite" placeholder="Webseite">
            </div>
            <div class="form-group">
                <textarea name="contact[body]" class="form-control" rows="8" placeholder="Dein Vorhaben oder deine Anfrage*" id="textareaMessage">{%- if form.body -%}{{ form.body }}{%- endif -%}</textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="btn ttbtnmainstyle">{{ 'contact.form.send' | t }}</button>
            </div>
        {%- endform -%}
    </div>
</div>
</div>

<style>
    .geschaeftskunden img {
        float: right;
        margin: 15px;
        border-radius: 20px;
        width: 100%;
        max-width: 400px;
        align-self: center;
    }
    @media only screen and (max-width: 790px) {
        .geschaeftskunden img {
            float: none;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
    }
    .geschaeftskunden h3 {
        padding-bottom: 6px !important;
    }
    .geschaeftskunden p {
        margin-top: 0px !important;
        margin-bottom: 6px !important;
    }
    .geschaeftskunden li p {
        margin: 0 !important;
    }
    .geschaeftskunden .form-group input, .geschaeftskunden .form-group textarea{
        border-radius: 15px;
    }
</style>