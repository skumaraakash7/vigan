            "label": "Video URL"
        },
        {
            "type": "text",
            "id": "margintop",
            "label": "Abstand oben (Pixel)",
            "default": "0"
        },
        {
            "type": "text",
            "id": "marginbottom",
            "label": "Abstand unten (Pixel)",
            "default": "0"
        },
        {
            "type": "checkbox",
            "id": "activate_overlay",
            "label": "Overlay aktivieren",
            "default": true
        },
        {
            "type": "textarea",
            "id": "overlay_html",
            "label": "Overlay HTML"
        },
        {
            "type": "checkbox",
            "id": "activate_button",
            "label": "Button anzeigen"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
        }
    ],
    "presets": [
        {
            "name": "Video",
            "category": "vigan"
        }
    ]
}
{% endschema %}

