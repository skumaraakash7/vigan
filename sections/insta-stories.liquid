<div class="container container-fluid-custom-mobile-padding stories">
    <div class="stories-wrapper">
        {% for block in section.blocks %}
            {% if block.type == 'story' %}
                <div class="story">
                    <a href="{{ block.settings.url }}">
                        <img src="{{ block.settings.image | img_url: 'master' }}"
                             style="{% if block.settings.pink_border %}border-color:#fe0062!important;{% endif %}">
                    </a>
                    <span style="{% if block.settings.pink_text %}color:#fe0062!important;{% endif %}">{{ block.settings.text }}</span>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>

<style>
    #shopify-section-{{ section.id }} .stories-wrapper {
        display: flex;
        flex-wrap: nowrap;
        flex-direction: row;
        align-items: flex-start;
        overflow-y: hidden;
        overflow-x: auto;
        -ms-overflow-style: none;
        scrollbar-width: none;
        margin-top: 20px;
    }
    #shopify-section-{{ section.id }} .stories-wrapper::-webkit-scrollbar {
        display: none;
    }
    #shopify-section-{{ section.id }} .story {
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        margin-left: 20px;
        margin-right: 20px;
    }
    #shopify-section-{{ section.id }} .story img {
        border-radius: 50%;
        height: 100px;
        width: 100px;
        border: 3px lightgray solid;
        padding: 4px;
    }
    #shopify-section-{{ section.id }} .story span {
        font-weight: 500;
        font-family: Roboto;
    }
    @media only screen and (max-width: 1025px) {
        #shopify-section-{{ section.id }} .story {
            margin-left: 15px;
            margin-right: 15px;
        }
        #shopify-section-{{ section.id }} .story img {
            height: 90px;
            width: 90px;
        }
        #shopify-section-{{ section.id }} .stories {
            width: 100% !important;
            max-width: initial !important;
            margin-left: 0;
            margin-right: 0;
            padding-left: 0;
            padding-right: 0;
        }
    }
    @media only screen and (max-width: 790px) {
        #shopify-section-{{ section.id }} .story {
            margin-left: 10px;
            margin-right: 10px;
        }
        #shopify-section-{{ section.id }} .story img {
            height: 80px;
            width: 80px;
        }
        #shopify-section-{{ section.id }} .story span {
            font-size: 13px !important;
        }
    }
</style>

{% schema %}
{
    "name": "Insta-Stories",
    "presets": [
        {
            "name": "Insta-Stories",
            "category": "vigan"
        }
    ],
    "blocks": [
        {
            "type": "story",
            "name": "Story",
            "settings": [
                {
                    "id": "image",
                    "type": "image_picker",
                    "label": "Story-Bild"
                },
                {
                    "id": "text",
                    "type": "text",
                    "label": "Text"
                },
                {
                    "id": "url",
                    "type": "url",
                    "label": "Story-Link"
                },
                {
                    "id": "pink_border",
                    "type": "checkbox",
                    "label": "Pinker Rahmen"
                },
                {
                    "id": "pink_text",
                    "type": "checkbox",
                    "label": "Pinker Text"
                }
            ]
        }
    ]
}
{% endschema %}

