{%- if section.settings.show_product_recommendations -%}
  {%- if recommendations.performed -%}
    {%- if recommendations.products_count > 0 -%}
		{%- assign slider_mode = true -%}
      <div class="container container-fluid-custom-mobile-padding">
        <div class="tt-block-title">
          {% comment %}
          {%- if section.settings.colored_heading != blank -%}<h2 class="colored-title">{{ section.settings.colored_heading }}</h2>{%- endif -%}
          {%- if section.settings.heading != blank -%}<h2 class="second-title">{{ section.settings.heading }}</h2>{%- endif -%}
          {% endcomment %}
          <h2 class="colored-title">FÜR DICH</h2>
          <h2 class="second-title">AUCH INTERESSANT</h2>
        </div>
        <div class="tt-carousel-products row arrow-location-right-top tt-alignment-img tt-layout-product-item v-product-list">
          {%- for product in recommendations.products limit: 4 -%}
            {% if product.template_suffix != 'hidden' %}
              <div class="col-2 col-md-4 col-lg-3">{%- include 'product-grid-item' -%}</div>
            {% endif %}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  {%- else  -%}
	<div class="container-indent" data-product-id="{{ product.id }}" data-section-id="{{ section.id }}" data-limit="4" data-section-type="product-recommendations" data-sectionname="product-recommendations"></div>
  {%- endif -%}
{%- endif -%}

{% schema %}
{
  "name": "Product recommendations",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_product_recommendations",
      "label": "Show dynamic recommendations",
      "info": "Dynamic recommendations change and improve over time. [Learn more](https://help.shopify.com/en/themes/development/recommended-products)",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "AUCH INTERESSANT"
    },
	{
      "type": "text",
      "id": "colored_heading",
      "label": "Colored Heading",
      "default": "FÜR DICH"
    }
  ]
}
{% endschema %}
